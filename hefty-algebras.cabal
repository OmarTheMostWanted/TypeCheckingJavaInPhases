test-suite aterm-tests
    main-is:            Main.hs
    type:               exitcode-stdio-1.0
    build-depends:      base >= 4.14,
                        containers >= 0.6.5.1,
                        transformers >= 0.5.6.2,
                        mtl >= 2.3.1,
                        HUnit ^>= 1.6.1,
                        dir-traverse,
                        text,
                        directory,
                        aterms
